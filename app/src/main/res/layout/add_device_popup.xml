<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

>

    <TextView
            android:id="@+id/add_device_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_device"
            android:padding="@dimen/activityPadding"
            android:textSize="22sp"
            android:textColor="@color/textSecondaryColor"
            android:background="@color/colorPrimary"
    />

    <EditText
            android:id="@+id/device_name_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/device_name"
            android:textColor="@color/textPrimaryColor"
            android:layout_marginTop="@dimen/activityMargin"
            android:layout_marginEnd="@dimen/activityMargin"
            android:layout_marginStart="@dimen/activityMargin"
            android:layout_below="@id/add_device_heading"
            android:layout_alignParentStart="true"
    />
    <EditText
            android:id="@+id/pin_id_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pin_id"
            android:textColor="@color/textPrimaryColor"
            android:layout_marginTop="@dimen/activityMargin"
            android:layout_marginEnd="@dimen/activityMargin"
            android:layout_marginStart="@dimen/activityMargin"
            android:layout_below="@id/device_name_editText"
            android:layout_alignParentStart="true"
    />
    <Button
            android:id="@+id/submit_device_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/activityMargin"
            android:layout_marginTop="@dimen/activityMargin"
            android:onClick="submit_device"
            android:layout_below="@id/pin_id_editText"
            android:layout_alignParentEnd="true"
    />
    <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_marginStart="@dimen/activityMargin"
            android:layout_marginTop="@dimen/activityMargin"
            android:onClick="back_button"
            android:layout_below="@id/pin_id_editText"
            android:layout_alignParentStart="true"
    />
</RelativeLayout>